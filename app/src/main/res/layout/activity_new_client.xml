<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.achraf.sport.cote.gestion_commercial_sqlite.ClientAcitivities.NewClientActivity">

    <EditText
        android:id="@+id/txtNom"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:hint="Nom"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/txtPrenom"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:hint="PrÃ©nom"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btnInsertClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Ajouter le client"
        android:onClick="insertClient"/>

    <Button
        android:id="@+id/btnListClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liste des clients"
        android:onClick="listClient"/>

    <Button
        android:id="@+id/btnMenus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu principal"
        android:onClick="goToMenu"/>

</LinearLayout>
